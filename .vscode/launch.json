	"configurations": [
		{
			"name": "Launch Chrome for debugging",
			"request": "launch",
			"type": "chrome",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}"
		},
		{
			"command": "npm start",
			"name": "Run React App",
			"request": "launch",
			"type": "node-terminal",
